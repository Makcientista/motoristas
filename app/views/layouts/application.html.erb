<!DOCTYPE html>
  <html>
    <head>
      <title>SIKON</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
    </head>
  <body>
    
    <div class="noPrint" style="margin-bottom: 70px"><%= render 'layouts/header' %></div>
    
    <% if !flash.empty? %>
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>" style="text-align: center;"><%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    
    <div class="noPrint">
      <% if logged_in? %>
        <ol class="breadcrumb" style="color: black">
          <%= render_breadcrumbs :tag => :li, :separator => "" %>
        </ol>
      <% end %>
    </div>
    
    <% if params[:controller] == "listas" || params[:action] == "relatorio" || params[:action] == "show"%>
      <a class="btn btn-default noPrint" style="position: absolute; right: 0px; margin-right: 10px" href="#" onclick="window.print();return false;">Imprimir PÃ¡gina</a>
    <% end %>
    
    <div class="container-fluid">
      <%= yield %>
    </div>

  </body>
</html>
