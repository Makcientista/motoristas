<div class="row">
  <div class="col-md-4 col-md-offset-4">
    
    <h1 style="text-align: center;">Registrar Motorista</h1>
    
    <%= form_for(@motorista) do |f| %>
      <%= f.label :nome, "Nome" %>
      <%= f.text_field :nome, class: 'form-control' %>
      <%= f.label :rf, "RF" %>
      <%= f.text_field :rf, class: 'form-control' %>
      <%= f.label :cargo, "Cargo" %>
      <%= f.text_field :cargo, class: 'form-control' %>
      <%= f.label :secao_original, "Seção Original"%>
      <%= f.text_field :secao_original, class: 'form-control' %>
      <%= f.label :secao_atual, "Seção Atual"%>
      <%= f.text_field :secao_atual, class: 'form-control' %>
      <%= f.label :pontuacao, "Pontuação" %>
      <%= f.text_field :pontuacao, class: 'form-control' %>
      <%= f.label :local, "Local" %>
      <%= f.text_field :local, class: 'form-control' %>
      <%= f.label :status, "Status" %>
      <%= f.text_field :status, class: 'form-control' %>
      <%= f.submit "Registrar Motorista", class: "btn btn-primary btn-block" %>
    <% end %>
    
  </div>
</div>