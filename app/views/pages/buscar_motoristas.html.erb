<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div>
      <%= form_tag motoristas_path, :method => 'get', :class => 'search_form' do %>
        <%= text_field_tag :search, params[:search], placeholder: 'Insira o RF do motorista', class: "form-control", style: "width: 180px; display: inline;" %>
        <%= submit_tag "Buscar", :name => nil, class: "btn-default form-control", style: "width: 75px; display: inline;" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row" style="margin-top: 20px;">
    <div class="col-md-6 col-md-offset-3">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>" style="text-align: center;"><%= message %></div>
      <% end %>
    </div>
  </div>
</div>